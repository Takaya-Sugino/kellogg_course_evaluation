<% was_validated = user.errors.any? %>

<%= form_with(model: user, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for name start -->
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = user.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <!-- Input for name start -->
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <!-- Input for name end -->
    <% if name_was_invalid %>
      <% user.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for name end -->
  <!-- Label and input for program start -->
  <div class="form-group">
    <% program_class = "form-control" %>
    <% program_was_invalid = user.errors.include?(:program) %>

    <% if was_validated %>
      <% if program_was_invalid %>
        <% program_class << " is-invalid" %>
      <% else %>
        <% program_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :program %>
    <!-- Input for program start -->
    <%= f.text_field :program, class: program_class, placeholder: "Enter program" %>
    <!-- Input for program end -->
    <% if program_was_invalid %>
      <% user.errors.full_messages_for(:program).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for program end -->
  <!-- Label and input for graduation_year start -->
  <div class="form-group">
    <% graduation_year_class = "form-control" %>
    <% graduation_year_was_invalid = user.errors.include?(:graduation_year) %>

    <% if was_validated %>
      <% if graduation_year_was_invalid %>
        <% graduation_year_class << " is-invalid" %>
      <% else %>
        <% graduation_year_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :graduation_year %>
    <!-- Input for graduation_year start -->
    <%= f.text_field :graduation_year, class: graduation_year_class, placeholder: "Enter graduation year" %>
    <!-- Input for graduation_year end -->
    <% if graduation_year_was_invalid %>
      <% user.errors.full_messages_for(:graduation_year).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for graduation_year end -->
  <!-- Label and input for interest start -->
  <div class="form-group">
    <% interest_class = "form-control" %>
    <% interest_was_invalid = user.errors.include?(:interest) %>

    <% if was_validated %>
      <% if interest_was_invalid %>
        <% interest_class << " is-invalid" %>
      <% else %>
        <% interest_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :interest %>
    <!-- Input for interest start -->
    <%= f.text_field :interest, class: interest_class, placeholder: "Enter interest" %>
    <!-- Input for interest end -->
    <% if interest_was_invalid %>
      <% user.errors.full_messages_for(:interest).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for interest end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
